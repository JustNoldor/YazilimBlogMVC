@model B403Blog.Models.EntityFramework.Makale
@{
    ViewBag.Title = "PanelForm";
    Layout = "~/Views/Shared/Panel.cshtml";
}
<link href="http://cdnjs.cloudflare.com/ajax/libs/summernote/0.8.11/summernote.css" rel="stylesheet">
<script src="http://cdnjs.cloudflare.com/ajax/libs/summernote/0.8.11/summernote.js"></script>
<div class="card shadow mb-4">
    <div class="card-header py-3">
        <h4 class="m-0 font-weight-bold text-primary">Makale Güncelleme Sayfası</h4>
    </div>
    <div class="card-body">
        @using (Html.BeginForm("Guncelle", "Panel", FormMethod.Post, new { enctype = "multipart/form-data" }))
        {
            @Html.AntiForgeryToken()

            <div class="form-group">
                @Html.Label("Makale Başlığı")
                @Html.TextBoxFor(m => m.Baslik, new { @class = "form-control" })
            </div>

            <div class="form-group">
                @Html.Label("Makale Açıklaması")
                @Html.TextBoxFor(m => m.Aciklama, new { @class = "form-control" })
            </div>

            <div class="form-group">
                <div class="table-responsive">
                    @Html.Label("Makale İçeriği")
                    @Html.TextAreaFor(model => model.Icerik, new { @id = "summernote", @class = "form-control", @style = "display:none;" })
                </div>
                    <script type="text/javascript">
                        $(document).ready(function () {
                            $('#summernote').summernote({
                                height: 400,
                                tabsize: 2,
                                width: 666,
                            });
                        });
                    </script>
                    
                </div>

            <div class="form-group">
                @Html.LabelFor(m => m.KategoriID, "Kategori")
                @Html.DropDownList("KategoriID", null, "Kategori Seçiniz", htmlAttributes: new { @class = "form-control" })
            </div>

            @*<div class="form-group">
                        @Html.Label("Eski Resim")
                        <img src="@Model.Resim.OrtaBoyut" alt="Alternate Text" />
                        @Html.ValidationMessageFor(m => m.Resim, "", new { @class = "text-danger" })
                </div>*@

            <div class="form-group">
                @Html.LabelFor(m => m.ResimID, "Resim")
                <input type="file" name="resim" id="resim" value="" accept=".jpg,.jpeg,.png" class="form-control" />
                @Html.ValidationMessageFor(m => m.ResimID, "", new { @class = "text-danger" })
            </div>



            <button type="submit" class="btn btn-success btn-lg btn-block">Güncelle</button>

        }
        </div>
    </div>

