@model B403Blog.Models.EntityFramework.Makale
<div class="blog-posts classic-blog single">
    <div class="post format-image">
        <div class="meta"><span class="date">@Model.EklenmeTarihi</span><span class="categories"><a href="/Kategori/Index/@Model.KategoriID">@Model.Kategori.Adi</a></span><span class="comments"><a href="#Yorum">yorum sayısı <i class="icon-chat-1"></i></a></span></div>
        <h1 class="post-title">@Model.Baslik</h1>
        <figure class="main">
            <img src="@Model.Resim.BuyukBoyut" alt="" />
        </figure>
        <div class="post-content">
            <p>@Html.Raw(Model.Icerik)</p>
            <div class="meta tags">
                @foreach (B403Blog.Models.EntityFramework.Etiket etk in Model.Etiket)
                {
                    <a href="/Etiket/Index/@etk.EtiketId">@etk.Adi</a>
                }

             
            </div>
            <div class="click-share">
                <ul>
                    <li><a class="btn share-facebook" href="#">Beğen</a></li>
                    <li><a class="btn share-twitter" href="#">Tweet</a></li>
                    <li><a class="btn share-pinterest" href="#">Pin it</a></li>
                </ul>
            </div>
            <!-- /.share-links -->

        </div>
    </div>
    <!-- /.post -->

</div>
<!-- /.blog-posts -->

<div class="about-author dark-wrapper">
    <div class="author-image"> <img alt="" src="@Model.Kullanici.Resim.OrtaBoyut" /> </div>
    <div class="author-details">
        <h3>@Model.Kullanici.Adi @Model.Kullanici.Soyadi Hakkında</h3>
        @*<p>@Model.Kullanici.Aciklama</p>*@
        <ul class="social">
            <li><a href="#"><i class="icon-s-twitter"></i></a></li>
            <li><a href="#"><i class="icon-s-facebook"></i></a></li>
            <li><a href="#"><i class="icon-s-pinterest"></i></a></li>
            <li><a href="#"><i class="icon-s-dribbble"></i></a></li>
            <li><a href="#"><i class="icon-s-linkedin"></i></a></li>
        </ul>
    </div>
    <div class="clearfix"></div>
</div>
