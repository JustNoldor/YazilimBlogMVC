@model B403Blog.Models.EntityFramework.Ticket

@{
    ViewBag.Title = "TicketGonderEkle";
    Layout = "~/Views/Shared/Panel.cshtml";
}
<div class="card shadow mb-4">
    <div class="card-header py-3">
        <h4 class="m-0 font-weight-bold text-primary">Ticket Listesi</h4>
    </div>
    <div class="card-body">
        <form action="/TicketGonder/Ekle" method="post" enctype="multipart/form-data">
            <table class="table table-bordered">
                <tr>
                    <th>Ticket Adı : </th>
                    <td>
                        @Html.TextAreaFor(m => m.TicketKonu, new { @class = "form-control" })
                        @Html.ValidationMessageFor(m => m.TicketKonu, "", new { @class = "text-danger" })

                    </td>
                </tr>
                <tr>
                    <th>Ticket: </th>
                    <td>
                        @Html.TextAreaFor(m => m.TicketAciklama, new { @class = "form-control" })
                        @Html.ValidationMessageFor(m => m.TicketAciklama, "", new { @class = "text-danger" })

                    </td>
                </tr>
                <tr>
                    <td></td>
                    <th>
                        <input type="submit" name="name" class="btn btn-success btn-lg btn-block" style="width: 100%;padding:25px;" value="Ticket Gönder" />
                    </th>
                </tr>
            </table>

        </form>
        </div>
    </div>

