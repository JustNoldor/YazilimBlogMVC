@model B403Blog.Models.EntityFramework.Kullanici
@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="en">
<form action="/Security/Login" method="post">

    <head>
        <title>Login V3</title>
        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width, initial-scale=1">
        <!--===============================================================================================-->
        <link rel="icon" type="image/png" href="/Content/Loginv3/images/icons/favicon.ico" />
        <!--===============================================================================================-->
        <link rel="stylesheet" type="text/css" href="/Content/Loginv3/vendor/bootstrap/css/bootstrap.min.css">
        <!--===============================================================================================-->
        <link rel="stylesheet" type="text/css" href="/Content/Loginv3/fonts/font-awesome-4.7.0/css/font-awesome.min.css">
        <!--===============================================================================================-->
        <link rel="stylesheet" type="text/css" href="/Content/Loginv3/fonts/iconic/css/material-design-iconic-font.min.css">
        <!--===============================================================================================-->
        <link rel="stylesheet" type="text/css" href="/Content/Loginv3/vendor/animate/animate.css">
        <!--===============================================================================================-->
        <link rel="stylesheet" type="text/css" href="/Content/Loginv3/vendor/css-hamburgers/hamburgers.min.css">
        <!--===============================================================================================-->
        <link rel="stylesheet" type="text/css" href="/Content/Loginv3/vendor/animsition/css/animsition.min.css">
        <!--===============================================================================================-->
        <link rel="stylesheet" type="text/css" href="/Content/Loginv3/vendor/select2/select2.min.css">
        <!--===============================================================================================-->
        <link rel="stylesheet" type="text/css" href="/Content/Loginv3/vendor/daterangepicker/daterangepicker.css">
        <!--===============================================================================================-->
        <link rel="stylesheet" type="text/css" href="/Content/Loginv3/css/util.css">
        <link rel="stylesheet" type="text/css" href="/Content/Loginv3/css/main.css">
        <!--===============================================================================================-->
    </head>
    <body>

        <div class="limiter">
            <div class="container-login100" style="background-image: url('/Content/Loginv3/images/bg-01.jpg');">
                <div class="wrap-login100">
                    <form class="login100-form validate-form">
                        <span class="login100-form-logo">
                            <i class="zmdi zmdi-landscape"></i>
                        </span>

                        <span class="login100-form-title p-b-34 p-t-27">
                            ADMİN PANELİ
                        </span>
                        <form class="user">
                            <div class="wrap-input100 validate-input" data-validate="Enter username">
                                @Html.TextBoxFor(m => m.KullaniciAdi, new { @class = "input100", placeholder = "Kullanıcı Adı" })
                            </div>

                            <div class="wrap-input100 validate-input" data-validate="Enter password">
                                @Html.PasswordFor(m => m.Parola, new { @class = "input100", placeholder = "Parola" })
                            </div>

                            <div class="container-login100-form-btn">
                                <button class="login100-form-btn">
                                    Giriş Yap
                                </button>
                            </div>

                            <div class="text-center p-t-90" style="color:white;">
                                    @ViewBag.Mesaj
                            </div>
                            <div class="text-center p-t-90">
                                <a class="txt1" href="#">
                                    Parolamı Unuttum!
                                </a>
                            </div>
                        </form>
</div>
            </div>
        </div>


        <div id="dropDownSelect1"></div>

        <!--===============================================================================================-->
        <script src="/Content/Loginv3/vendor/jquery/jquery-3.2.1.min.js"></script>
        <!--===============================================================================================-->
        <script src="/Content/Loginv3/vendor/animsition/js/animsition.min.js"></script>
        <!--===============================================================================================-->
        <script src="/Content/Loginv3/vendor/bootstrap/js/popper.js"></script>
        <script src="/Content/Loginv3/vendor/bootstrap/js/bootstrap.min.js"></script>
        <!--===============================================================================================-->
        <script src="/Content/Loginv3/vendor/select2/select2.min.js"></script>
        <!--===============================================================================================-->
        <script src="v/Content/Loginv3/endor/daterangepicker/moment.min.js"></script>
        <script src="/Content/Loginv3/vendor/daterangepicker/daterangepicker.js"></script>
        <!--===============================================================================================-->
        <script src="/Content/Loginv3/vendor/countdowntime/countdowntime.js"></script>
        <!--===============================================================================================-->
        <script src="/Content/Loginv3/js/main.js"></script>

    </body>
</html>
</form>

