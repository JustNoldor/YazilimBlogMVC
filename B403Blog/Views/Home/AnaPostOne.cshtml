@model IEnumerable<B403Blog.Models.EntityFramework.Makale>

@using B403Blog.App_Classes

@foreach (B403Blog.Models.EntityFramework.Makale makale in Model)
{
    <div class="col-md-6 col-12 paddding animate-box fadeIn animated-fast" data-animate-effect="fadeIn">
        <div class="fh5co_suceefh5co_height">
            <img src="@makale.Resim.OrtaBoyut" alt="img">
            <a href="/Makaleler/@Url.FriendlyURLTitle(makale.Kategori.Adi.ToString())/@Url.FriendlyURLTitle(@makale.Baslik)/Detay/@makale.MakaleId">
                    <div class="fh5co_suceefh5co_height_position_absolute"></div>
                </a>
                <div class="fh5co_suceefh5co_height_position_absolute_font">
                    <div class="">
                        <a href="#" class="color_fff">
                            <i class="fa fa-clock-o"></i>
                            @makale.EklenmeTarihi.ToShortDateString()
                        </a>
                    </div>
                    <div class=""><a href="/Makaleler/@Url.FriendlyURLTitle(makale.Kategori.Adi.ToString())/@Url.FriendlyURLTitle(@makale.Baslik)/Detay/@makale.MakaleId" class="fh5co_good_font"> @makale.Baslik </a></div>
                </div>
</div>
    </div>
}
